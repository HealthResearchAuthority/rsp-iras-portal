@using Rsp.Portal.Application.Constants
@using Rsp.Portal.Application.DTOs.Responses.CmsContent
@model ProjectClosuresModel
@inject IHttpContextAccessor httpContextAccessor
@{
    ViewBag.Title = (string?)ViewData[PageContentElements.MetaTitle];
    //var projectRecordId = TempData.Peek(TempDataKeys.ProjectRecordId) as string;
    var pageContentData = (Dictionary<string, MixedContentPageItem?>?)ViewData[PageContentElements.PageContent];
    var pageContent = pageContentData != null
        ? pageContentData
        : new Dictionary<string, MixedContentPageItem?>();

    var status = Context.Request.Query["status"].ToString();
    var projectRecordId = Context.Request.Query["id"].ToString();

    var title = pageContent.GetValueOrDefault("Application.CloseProject.WarningTitle", null);
    var body = pageContent.GetValueOrDefault("Application.CloseProject.WarningBody", null);
    var pendingClosureTitle = pageContent.GetValueOrDefault("Application.CloseProject.PendingClosureTitle", null);
    var pendingClosureBody = pageContent.GetValueOrDefault("Application.CloseProject.PendingClosureBody", null);
    var closedStatusTitle = pageContent.GetValueOrDefault("Application.CloseProject.ClosedStatusTitle", null);
    var closedStatusBody = pageContent.GetValueOrDefault("Application.CloseProject.ClosedStatusBody", null);
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        @switch (status)
        {
            case ProjectRecordStatus.Active:
                <h1 class="govuk-heading-l">@Html.Raw(title?.Value)</h1>
                break;

            case ProjectRecordStatus.PendingClosure:
                <h1 class="govuk-heading-l">@Html.Raw(pendingClosureTitle?.Value)</h1>
                break;

            case ProjectRecordStatus.Closed:
                <h1 class="govuk-heading-l">@Html.Raw(closedStatusTitle?.Value)</h1>
                break;
            default:
                <h1 class="govuk-heading-l">@Html.Raw(title?.Value)</h1>
                break;
        }

        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">IRAS ID</dt>
                <dd class="govuk-summary-list__value">@Model.IrasId</dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Short project title</dt>
                <dd class="govuk-summary-list__value">@Model.ShortProjectTitle</dd>
            </div>
        </dl>
        <p class="govuk-body">
            @switch (status)
            {
                case ProjectRecordStatus.Active:
                    @Html.Raw(body?.Value)
                    break;

                case ProjectRecordStatus.PendingClosure:
                    @Html.Raw(pendingClosureBody?.Value)
                    break;

                case ProjectRecordStatus.Closed:
                    @Html.Raw(closedStatusBody?.Value)
                    break;
                default:
                    @Html.Raw(body?.Value)
                    break;
            }
        </p>

        <div class="save-buttons">
            <a class="govuk-button" asp-route="pov:postapproval" asp-route-projectRecordId="@Model.ProjectRecordId">
                Return to project overview
            </a>
        </div>
    </div>
</div>