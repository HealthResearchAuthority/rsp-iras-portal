@using Rsp.IrasPortal.Application.Constants
@using Rsp.IrasPortal.Application.DTOs.Responses.CmsContent;

@section BackNavigation {
    <partial name="_BackNavigation" model="@("app:startproject", "Back", new Dictionary<string, string>())" />
}

@{
    var pageContentData = (Dictionary<string, MixedContentPageItem?>?)ViewData[PageContentElements.PageContent];
    var pageContent = pageContentData != null ?
        pageContentData :
        new Dictionary<string, MixedContentPageItem?>();

    var headline = pageContent.GetValueOrDefault("ProjectNotEligible.Title", null);
    var body = pageContent.GetValueOrDefault("ProjectNotEligible.Body", null);
}

<h1 class="govuk-heading-l">@headline?.Value</h1>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <p class="govuk-body">
            @Html.Raw(body?.Value)
        </p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="save-buttons">
        <a class="govuk-button" asp-route="app:startproject" aria-label="Back to start creating a project record">
            Return to IRAS ID
        </a>
    </div>
</div>