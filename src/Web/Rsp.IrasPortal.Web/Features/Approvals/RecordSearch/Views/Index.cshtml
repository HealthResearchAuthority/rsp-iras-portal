@using Rsp.Gds.Component.Models
@using Rsp.IrasPortal.Application.Constants
@using Rsp.IrasPortal.Application.DTOs.Responses.CmsContent
@using Rsp.IrasPortal.Web.Features.Approvals.RecordSearch.Models
@model RecordSearchNavigationModel

@section Breadcrumb {
	@await Html.PartialAsync("_Breadcrumb", new List<(string, string?)>{
		("Approvals", Url.RouteUrl("approvalsmenu:welcome"))
	})
}
@{
	var pageContentData = (Dictionary<string, MixedContentPageItem?>?)ViewData[PageContentElements.PageContent];
	var pageContent = pageContentData != null
	? pageContentData
	: new Dictionary<string, MixedContentPageItem?>();

	var title = pageContent.GetValueOrDefault("RecordSearch.Title", null);

	var radioOptions = new List<GdsOption> {
		 new GdsOption{ Label = "Project record",
			 Value = SearchRecordTypes.ProjectRecord
		 },
		 new GdsOption{ Label = "Modification record",
			 Value = SearchRecordTypes.ModificationRecord
		 }
	};
}
<div class="govuk-grid-row">
	<div class="govuk-grid-column-full">
		<partial name="_ValidationSummary" model="@(ViewData.ModelState, "There is a problem")" />
		<h1 class="govuk-heading-l">@Html.Raw(title?.Value)</h1>
		<div id="changedName-hint" class="govuk-hint">
			Choose one
		</div>
		<form asp-controller="RecordSearch" asp-action="Navigate" method="post">
			<div class="govuk-form-group @(ViewData.ModelState.ErrorCount > 0 ? "govuk-form-group--error" : "")">
				<fieldset class="govuk-fieldset">
					@if (ViewData.ModelState.ErrorCount > 0)
					{
						<p id="whereDoYouLive-error" class="govuk-error-message">
							@ViewData.ModelState["RecordType"]?.Errors?.FirstOrDefault()?.ErrorMessage
						</p>
					}
					<div class="govuk-radios" data-module="govuk-radios">
						<div class="govuk-radios__item">
							<input class="govuk-radios__input" id="RecordType" name="recordType" type="radio" value="@SearchRecordTypes.ProjectRecord">
							<label class="govuk-label govuk-radios__label" for="recordType">
								Project record
							</label>
						</div>
						<div class="govuk-radios__item">
							<input class="govuk-radios__input" id="RecordType-2" name="recordType" type="radio" value="@SearchRecordTypes.ModificationRecord">
							<label class="govuk-label govuk-radios__label" for="recordType-2">
								Modification record
							</label>
						</div>

					</div>
				</fieldset>
			</div>
			<button type="submit" class="govuk-button" data-module="govuk-button">
				Next
			</button>
		</form>
	</div>
</div>