                    conditionalRulesHandler.init(conditionalRulesData);
                });
            </script>
            @foreach (var sectionGroup in groupedSections)
                {
                    <dl class="govuk-summary-list govuk-!-margin-bottom-7">
                        <input type="hidden" name="data-docindex" value="@index" />

                        @if (sectionGroup.Key == firstSectionKey)
                        {
                            <div class="govuk-summary-list__row">
                                <dt class="govuk-summary-list__key">File name</dt>
                                <dd class="govuk-summary-list__value">
                                    @if (docu.IsMalwareScanSuccessful == true)
                                    {
                                        <a asp-route="pmc:downloaddocument"
                                           asp-route-fileName="@docu.FileName"
                                           asp-route-path="@docu.DocumentStoragePath" class="govuk-link">
                                            @docu.FileName
                                        </a>
                                    }
                                    else
                                    {
                                        @docu.FileName
                                    }
                                </dd>
                            </div>
                        }

                        @foreach (var question in sectionGroup)
                        {
                            string questionKey = question.GetModelKey();
                            bool fieldHasErrors = ViewData.ModelState[questionKey]?.ValidationState == ModelValidationState.Invalid;
                            string conditionalClass = !question.IsMandatory && question.Rules.Any() ? "conditional" : "";
                            string parentAttributes = conditionalClass != "" ? $"data-parents=\"{string.Join(',', question.Rules.Select(r => r.ParentQuestionId))}\" data-questionid=\"{question.QuestionId}\"" : "";
                            string questionText = string.IsNullOrWhiteSpace(question.ShortQuestionText) ? question.QuestionText : question.ShortQuestionText;

                            <div class="@conditionalClass govuk-summary-list__row" id="@questionKey" @Html.Raw(parentAttributes)>
                                <dt class="govuk-summary-list__key">@questionText</dt>
                                <dd class="govuk-summary-list__value @(fieldHasErrors ? "govuk-error-summary__list" : "")">
                                    @if (question.IsMissingAnswer())
                                    {
                                        <a class="govuk-link" href="@Url.RouteUrl("pmc:continuetodetails", new { documentId = docu.DocumentId, reviewAnswers = true })">
                                            @question.GetActionText()<span class="govuk-visually-hidden"> @questionText</span>
                                        </a>
                                    }
                                    else
                                    {
                                        <input type="hidden" id="@question.QuestionId" name="hiddenResponse" value="@question.SelectedOption" />
                                        @Html.Raw(question.GetDisplayText())
                                    }
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    @if (!question.IsMissingAnswer())
                                    {
                                        <a class="govuk-link" href="@Url.RouteUrl("pmc:continuetodetails", new { documentId = docu.DocumentId, reviewAnswers = true })">
                                            @question.GetActionText()<span class="govuk-visually-hidden"> @questionText</span>
                                        </a>
                                    }
                                </dd>
                            </div>
                        }
                    </dl>
                    @if (docu.ShowSupersedeDocumentSection)
                    {

                        var key = $"Questions[{index}].DocumentInService";
                        var isDocumentInServiceInvalid = ViewData.ModelState.ContainsKey(key)
                        && ViewData.ModelState[key].Errors.Count > 0;

                        <dl class="govuk-summary-list">
                            <div class="govuk-summary-list__row" id="Questions[@index].DocumentInService">
                                <dt class="govuk-summary-list__key">
                                    Document in service
                                </dt>
                                <dd class="govuk-summary-list__value @(isDocumentInServiceInvalid ? "govuk-error-summary__list" : "")">
                                    @if (docu.ReplacesDocumentId.HasValue && docu.ReplacesDocumentId != Guid.Empty)
                                    {
                                        @Html.Raw("Yes")
                                    }
                                    else if (docu.ReplacesDocumentId == Guid.Empty)
                                    {
                                        @Html.Raw("No")
                                    }
                                    else
                                    {
                                        <a class="govuk-link" href="@Url.RouteUrl("pmc:supersededocumenttoreplace", new { documentTypeId = docu.MetaDataDocumentTypeId, projectRecordId = docu.ProjectRecordId, currentDocumentId = docu.DocumentId, reviewAnswers = true })">
                                            Enter document in service<span class="govuk-visually-hidden"> Enter document in service</span>
                                        </a>
                                    }
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    @if (docu.ReplacesDocumentId.HasValue)
                                    {
                                        <a class="govuk-link" href="@Url.RouteUrl("pmc:supersededocumenttoreplace", new { documentTypeId = docu.MetaDataDocumentTypeId, projectRecordId = docu.ProjectRecordId, currentDocumentId = docu.DocumentId, reviewAnswers = true })">
                                            Change<span class="govuk-visually-hidden"> document in service</span>
                                        </a>
                                    }
                                </dd>
                            </div>

                            @if (docu.ReplacesDocumentId.HasValue && docu.ReplacesDocumentId != Guid.Empty)
                            {
                                <div class="govuk-summary-list__row" id="Questions[@index].DocumentToReplace">
                                    <dt class="govuk-summary-list__key">
                                        Document to replace
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @if (docu.IsMalwareScanSuccessful == true)
                                        {
                                            <a asp-route="pmc:downloaddocument"
                                               asp-route-fileName="@docu.DocumentToReplaceFileName"
                                               asp-route-path="@docu.DocumentToReplaceStoragePath" class="govuk-link">
                                                @docu.DocumentToReplaceFileName
                                            </a>
                                        }
                                        else
                                        {
                                            @docu.DocumentToReplaceFileName
                                        }
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        <a class="govuk-link" href="@Url.RouteUrl("pmc:supersededocumenttoreplace", new { documentTypeId = docu.MetaDataDocumentTypeId, projectRecordId = docu.ProjectRecordId, currentDocumentId = docu.DocumentId, reviewAnswers = true })">
                                            Change<span class="govuk-visually-hidden"> document to replace</span>
                                        </a>
                                    </dd>
                                </div>
                            }

                            @{
                                var cleanOrTrackedkey = $"Questions[{index}].CleanOrTracked";
                                var isCleanOrTrackedInvalid = ViewData.ModelState.ContainsKey(cleanOrTrackedkey)
                                && ViewData.ModelState[cleanOrTrackedkey].Errors.Count > 0;
                            }
                            <div class="govuk-summary-list__row" id="Questions[@index].CleanOrTracked">
                                <dt class="govuk-summary-list__key">
                                    Clean or tracked
                                </dt>
                                <dd class="govuk-summary-list__value @(isCleanOrTrackedInvalid ? "govuk-error-summary__list" : "")">
                                    @if (docu.DocumentType == "Clean")
                                    {
                                        @Html.Raw("Clean")
                                    }
                                    else if (docu.DocumentType == "Tracked")
                                    {
                                        @Html.Raw("Tracked")
                                    }
                                    else
                                    {
                                        <a class="govuk-link" href="@Url.RouteUrl("pmc:supersededocumenttype", new { documentTypeId = docu.MetaDataDocumentTypeId, projectRecordId = docu.ProjectRecordId, currentDocumentId = docu.DocumentId, reviewAnswers = true })">
                                            Enter clean or tracked<span class="govuk-visually-hidden"> Enter clean or tracked</span>
                                        </a>
                                    }
                                </dd>
                            </div>
                            @{
                                var displayDocumentType = docu?.DocumentType switch
                                {
                                    "Clean" => "Tracked",
                                    "Tracked" => "Clean",
                                    _ => docu?.DocumentType
                                };
                            }

                            @if (!string.IsNullOrEmpty(docu.DocumentType))
                            {
                                var linkedDocumentFileNamekey = $"Questions[{index}].LinkedDocumentFileName";
                                var isLinkedDocumentFileNameInvalid = ViewData.ModelState.ContainsKey(linkedDocumentFileNamekey)
                                && ViewData.ModelState[linkedDocumentFileNamekey].Errors.Count > 0;

                                <div class="govuk-summary-list__row" id="Questions[@index].LinkedDocumentFileName">
                                    <dt class="govuk-summary-list__key">
                                        @displayDocumentType document
                                    </dt>
                                    <dd class="govuk-summary-list__value @(isLinkedDocumentFileNameInvalid ? "govuk-error-summary__list" : "")">
                                        @if (docu.IsMalwareScanSuccessful == true)
                                        {
                                            <a asp-route="pmc:downloaddocument"
                                               asp-route-fileName="@docu.LinkedDocumentFileName"
                                               asp-route-path="@docu.LinkedDocumentStoragePath" class="govuk-link">
                                                @docu.LinkedDocumentFileName
                                            </a>
                                        }
                                        else
                                        {
                                            @if (string.IsNullOrEmpty(docu.LinkedDocumentFileName))
                                            {
                                                <a class="govuk-link" href="@Url.RouteUrl("pmc:supersedelinkdocument", new { documentTypeId = docu.MetaDataDocumentTypeId, projectRecordId = docu.ProjectRecordId, currentDocumentId = docu.DocumentId, linkDocument = true, reviewAnswers = true })">
                                                    Enter linked document<span class="govuk-visually-hidden"> Enter linked document</span>
                                                </a>
                                            }
                                            else
                                            {
                                                @docu.LinkedDocumentFileName
                                            }
                                        }
                                    </dd>
                                </div>
                            }
                        </dl>

                    }
                    <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-6" />
                }
            }

            <h2 class="govuk-heading-m">Confirm document details</h2>
            <p class="govuk-body">
                When you’ve checked that all the document details are correct, select Save and continue
            </p>
            <div class="govuk-button-group">
                <partial name="_SubmitButton" model="@("pmc:reviewalldocumentdetails", "Save and continue", new Dictionary<string, string> { })" />

				<input type="hidden" name="projectRecordId" value="@projectRecordId" />
                <input type="hidden" name="sponsorOrganisationUserId" value="@sponsorOrganisationUserId" />
                <input type="hidden" name="rtsId" value="@rtsId" />
                @{
                    ViewBag.Style = "govuk-button govuk-button--secondary";
                }
                @if (status is ModificationStatus.ReviseAndAuthorise)
                {
                    <a asp-route="pmc:saveforlater" asp-route-projectRecordId="@projectRecordId" asp-route-sponsorOrganisationUserId="@sponsorOrganisationUserId" asp-route-rtsId="@rtsId" asp-route-routeName="sws:modifications" class="govuk-button govuk-button--secondary">
                        Save for later
                    </a>
                }
                else
                {
                    <a asp-route="pmc:saveforlater" asp-route-projectRecordId="@projectRecordId" asp-route-routeName="pov:postapproval" class="govuk-button govuk-button--secondary">
                        Save for later
                    </a>
                }
			</div>
		</form>
	</div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/documentsreview.js"></script>



