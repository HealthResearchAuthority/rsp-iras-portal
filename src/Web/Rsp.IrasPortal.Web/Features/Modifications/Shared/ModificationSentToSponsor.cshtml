@using Rsp.IrasPortal.Application.Constants

@{
    ViewBag.Title = $"Modification set to sponsor";

    var projectRecordId = TempData[TempDataKeys.ProjectRecordId];

    // this is the last stage of the modification so clear
    // all TempData values
    TempData.Clear();
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Modification sent to sponsor
            </h1>
        </div>

        <h2 class="govuk-heading-m">What happens next</h2>
        <p class="govuk-body">
            You've sent your modification to the sponsor. They'll either accept the changes and submit it, or contact you for more information.
        </p>

        <a class="govuk-button" asp-route="pov:projectdetails" asp-route-projectRecordId="@projectRecordId">
            Return to project overview
        </a>
    </div>
</div>