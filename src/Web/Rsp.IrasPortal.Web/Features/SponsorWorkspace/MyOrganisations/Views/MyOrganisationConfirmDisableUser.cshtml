@using Rsp.Portal.Web.Areas.Admin.Models
@model UserViewModel;

@{
    ViewBag.Title = "Confirm to disable user - Manage Organisations - Sponsor workspace";
}

<a asp-route="sws:MyOrganisationViewUser" asp-all-route-data="@(new Dictionary<string, string> { { "rtsId", ViewBag.RtsId }, { "userId", Model.Id! } })" class="govuk-back-link">Back</a>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-l">Confirm that you want to disable @Model.GivenName @Model.FamilyName</h2>
        <p class="govuk-body">You are about to disable the user from working under this sponsor organisation.</p>
        <form method="post">
            <input hidden name="Id" value="@(Model.Id ?? string.Empty)" />
            <input hidden name="Email" asp-for="Email" value="@(Model.Email ?? string.Empty)" />
            <input hidden name="RtsId" value="@(ViewBag.RtsId ?? string.Empty)" />
            <button asp-route="sws:DisableUser" type="submit" class="govuk-button govuk-button--warning" data-module="govuk-button">
                Confirm
            </button>
        </form>
    </div>
</div>