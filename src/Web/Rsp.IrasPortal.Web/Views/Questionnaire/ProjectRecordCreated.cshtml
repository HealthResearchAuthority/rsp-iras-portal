@using Rsp.Portal.Application.Constants
@using Rsp.Portal.Application.DTOs.Responses.CmsContent
@model (int? IrasId, string ShortProjectTitle, string ProjectRecordId)
@{
	ViewBag.Title = (string?)ViewData[PageContentElements.MetaTitle];

    var pageContentData = (Dictionary<string, MixedContentPageItem?>?)ViewData[PageContentElements.PageContent];
    var pageContent = pageContentData != null
        ? pageContentData
        : new Dictionary<string, MixedContentPageItem?>();

    var title = pageContent.GetValueOrDefault("ProjectRecord.SuccessfulCreation.Title", null);
    var footer = pageContent.GetValueOrDefault("ProjectRecord.SuccessfulCreation.Footer", null);
}

<div class="govuk-grid-row">
	<div class="govuk-grid-column-two-thirds">
		<div class="govuk-panel govuk-panel--confirmation">
			<h1 class="govuk-panel__title">
                @Html.Raw(title?.Value)
			</h1>
			<div class="govuk-panel__body">
				For @Model.ShortProjectTitle,<br />
				IRAS ID: @Model.IrasId
			</div>
		</div>

        <p class="govuk-body">
            @Html.Raw(footer?.Value)
			<a class="govuk-link" asp-controller="ProjectOverview" asp-action="ProjectDetails" asp-route-projectRecordId="@Model.ProjectRecordId">
				View project overview
			</a>
		</p>
	</div>
</div>