@using Rsp.IrasPortal.Application.DTOs.Responses;

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-l" id="page-title">Create a project record</h2>
			</div>
		</div>
        <authorized auth-params="@new(Roles:"user")">

			<p class="govuk-body">
				As it's the first time you're using this system to manage your project, we need you to enter a few details to create a project record.
				You'll only have to do this once.
			</p>
			<p class="govuk-body">
				The information we'll ask for can all be found on your original application, so have this with you before starting.
			</p>
			<p class="govuk-body">
				You'll be able to save your progress and come back to it later if you need to.
			</p>

			<a class="gem-c-button govuk-button govuk-button--start" asp-route="app:StartProjectRecord" aria-label="Start creating a project record">
				Start
				<svg class="govuk-button__start-icon govuk-!-display-none-print" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" focusable="false" aria-hidden="true">
					<path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
				</svg>
			</a>
        </authorized>
    </div>
</div>