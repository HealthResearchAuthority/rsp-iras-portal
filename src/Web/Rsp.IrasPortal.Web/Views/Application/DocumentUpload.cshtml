@model List<Rsp.IrasPortal.Domain.Entities.Document>?
@{
    ViewData["Title"] = "Application";
}

<div class="govuk-width-container app-width-container">

    <partial name="_BackNavigation" model="@("app:projectstartdate","Back")" />

    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">Choose documents to upload</h1>
                <form asp-action="Upload" enctype="multipart/form-data">
                    <div class="govuk-form-group">
                        <input class="govuk-file-upload" type="file" id="formFiles" name="formFiles" multiple />
                    </div>
                    <button type="submit" class="govuk-button govuk-button--secondary">
                        Upload document(s)
                    </button>
                    <dl class="govuk-summary-list govuk-summary-list--long-key">
                        @if (Model != null)
                        {
                            @foreach (var file in Model)
                            {
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        @file.Name
                                    </dt>
                                    <dd class="govuk-summary-list__value" style="text-align:end">
                                        @file.Size Bytes
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        <a class="govuk-link" href="#">Remove</a>
                                    </dd>
                                </div>
                            }
                        }
                    </dl>
                </form>
                <button type="submit" class="govuk-button" data-module="govuk-button">
                    Continue
                </button>
            </div>
        </div>
    </main>
</div>