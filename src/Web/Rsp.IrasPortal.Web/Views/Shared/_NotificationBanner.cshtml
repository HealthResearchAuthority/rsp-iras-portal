@model (string Title, string Heading, string Message, bool IsImportant)

@{
    // Only apply success when NOT important
    var modifierClass = Model.IsImportant
        ? "govuk-notification-banner--important"
        : "govuk-notification-banner--success";
}

<div class="govuk-notification-banner @modifierClass"
     role="alert"
     aria-labelledby="govuk-notification-banner-title"
     aria-describedby="govuk-notification-banner-message"
     tabindex="0"
     data-module="govuk-notification-banner">
    <div class="govuk-notification-banner__header">
        <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
            @Model.Title
        </h2>
    </div>
    <div class="govuk-notification-banner__content">
        <h3 class="govuk-notification-banner__heading" id="govuk-notification-banner-message">
            @Model.Heading
        </h3>
		@if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="govuk-body">@Model.Message</p>
        }
    </div>
</div>