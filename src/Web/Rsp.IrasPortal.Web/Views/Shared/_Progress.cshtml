            <div class="stage-circle"></div>
            <div class="stage-label">
                <button class="govuk-link" type="submit" asp-route="qnc:saveresponses" asp-all-route-data="@(new Dictionary<string, string> { { "categoryId", "A" }, { "applicationId", Model.applicationId }})">Project Filter</button>
