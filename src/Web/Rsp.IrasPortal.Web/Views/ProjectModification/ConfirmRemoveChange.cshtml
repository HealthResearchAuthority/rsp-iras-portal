@using System.Text.Json
@using Microsoft.AspNetCore.Mvc.ModelBinding
@using Microsoft.FeatureManagement
@using Rsp.IrasPortal.Application.Constants
@using System.Globalization
@model (ModificationDetailsPageViewModel ModificationModel, string ModificationChangeId, string ModificationChangeName)

@{
    ViewData["ReviewChanges"] = true;
    bool reviewAllPage = ViewData["ReviewAllPage"] as bool? ?? false;
    var navModel = (reviewAllPage ? "pmc:reviewallchanges" : "pmc:modificationdetailspage", "Back", new Dictionary<string, string>());
}

@section BackNavigation {    
    <form method="get">
        <partial name="_BackNavigation" model="navModel" />
    </form>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Are you sure you want to remove @Model.ModificationChangeName?</h1>
        <partial name="_ProjectModificationSummary" model="Model.ModificationModel" />        
        <div class="save-buttons">
            <form method="post">  
                @Html.AntiForgeryToken()
                <input hidden name="ModificationChangeId" asp-for="ModificationChangeId" value="@Model.ModificationChangeId" />
                <button asp-route="pmc:removechange" type="submit" class="govuk-button govuk-button--warning" data-module="govuk-button">
                    Remove change
                </button>
            </form>
        </div>
    </div>
</div>