@using Rsp.IrasPortal.Application.Constants;
@model ProjectOverviewModel

@{
    ViewBag.Title = "Project overview";
    ViewBag.Active = ProjectOverview.ResearchLocations;
}

@{
    var routeName = (ViewData["BackRoute"] as string) ?? "app:Welcome";
    var routeValues = ViewData["BackRouteValues"] as Dictionary<string, string>
                      ?? new Dictionary<string, string>();
}

@section BackNavigation {
    <partial name="_BackNavigation" model="@((routeName, "Back", routeValues))" />
}

<partial name="_NavigationHeaderPartial" model="@Model" />

<div class="govuk-grid-row">
    <div class="govuk-width-container govuk-!-margin-top-4">
        <h2 class="govuk-heading-m">Research locations</h2>
        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Participating nations
                </dt>
                @if (Model.ParticipatingNations is { Count: > 0 })
                {
                    <dd class="govuk-summary-list__value">
                        @foreach (var nation in Model.ParticipatingNations)
                        {
                            @nation<br/>
                        }
                    </dd>
                }
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    NHS / HSC organisations
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.NhsOrHscOrganisations
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Lead nation
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.LeadNation
                </dd>
            </div>
        </dl>
    </div>
</div>