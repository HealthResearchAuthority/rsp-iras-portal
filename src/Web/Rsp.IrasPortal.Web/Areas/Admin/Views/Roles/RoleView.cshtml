@using Rsp.Portal.Web.Areas.Admin.Models
@model RoleViewModel

@{
    var buttonText = ViewBag.Mode == "edit" ? "Save Changes" : "Create";
    var heading = ViewBag.Mode == "edit" ? "Edit Role" : "Create a new role";
}

<h2 class="govuk-heading-l">@heading</h2>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post">
            <input name="Id" asp-for="Id" value="@(Model.Id ?? string.Empty)" />
            <input name="OriginalName" asp-for="OriginalName" value="@(Model.OriginalName ?? string.Empty)" />

            <div class="govuk-form-group">
                <label class="govuk-label" for="Name">Role Name</label>
                <input class="govuk-input" asp-for="Name" />
                <span class="govuk-error-message" asp-validation-for="Name"></span>
            </div>

            <partial name="_SubmitButton" model="@("admin:submitrole", buttonText, new Dictionary<string, string>())" />

            @{
                ViewBag.Style = "ms-3 govuk-button govuk-button--secondary";
            }

            <partial name="_SubmitButton" model="@("admin:roles", "Cancel", new Dictionary<string, string>())" />
        </form>
    </div>
</div>